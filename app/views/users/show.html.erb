<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<%= render 'users/info', user: @user, book: @book %>


<div>
    <table>

        <tr>
            <th>
            </th>
            <th>
                Title
            </th>
            <th>
                Opinion
            </th>
            
        </tr>


        <% @books.each do |book| %>
            
            <tr>
                <td>
                    <%= link_to user_path(@user) do %>
                        <%= image_tag @user.get_profile_image(100,100) %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td>
                    <%= book.body %>
                </td>
                
            </tr>

        <% end %>

    </table>
</div>
    
