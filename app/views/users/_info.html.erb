<div>
    <h1>User Info</h1>
    <div>
        <%= image_tag user.get_profile_image(100,100) %>
        <table>
            <tr>
                <th>
                    name
                </th>
                <td>
                    <%= user.name %>
                </td>
            </tr>
            <tr>
                <th>
                    introduction
                </th>
                <td>
                    <%= user.introduction %>
                </td>
            </tr>
        </table>
        <div>
            <%= link_to "edit", edit_user_path(user) %>
    </div>
</div>

<div>
    <h2>New Book</h2>
    <%= form_with model: book, url: books_path do |f| %>
        tite<br>
        <%= f.text_field :title %><br>
        body<br>
        <%= f.text_area :body %><br>
        <%= f.submit "create book" %>
    <% end %>
</div>