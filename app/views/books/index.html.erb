
<table>

    <tr>
        <th>
            Tilte
        </th>
        <th>
            Body
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>


    <% @books.each do |book| %>
        
        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.body %>
            </td>
            <td>
                <%= button_to book_path(book), method: :get do %>
                    show
                <% end %>
            </td>
            <td>
                <%= button_to book_path(book), method: :delete do %>
                    destroy
                <% end %>
            </td>
        </tr>

    <% end %>

</table>


<%= render 'users/info', user:@user, book:@book %>
