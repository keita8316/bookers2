
<table>

    <tr>
        <th>
            Tilte
        </th>
        <th>
            Body
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>


    <% @books.each do |book| %>
        
        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.body %>
            </td>
            <td>
                <%= link_to book_path(book) do %>
                    show
                <% end %>
            </td>
            <td>
                <%= button_to book_path(book), method: :delete do %>
                    destroy
                <% end %>
            </td>
        </tr>

    <% end %>

</table>

<p>New Book</p>

<%= form_with model: @book do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :body %>
    <%= f.submit 'create' %>
<% end %>

