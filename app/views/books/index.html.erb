
<table>

    <tr>
        <th>
            Tilte
        </th>
        <th>
            Body
        </th>
        
    </tr>


    <% @books.each do |book| %>
        
        <tr>
            <td>
                <%= link_to book_path(book) do %>
                    <%= book.title %>
                <% end %>
            </td>
            <td>
                <%= book.body %>
            </td>
            
        </tr>

    <% end %>

</table>


<%= render 'users/info', user:@user, book:@book %>
